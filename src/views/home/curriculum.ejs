<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <% for (let building of buildings) { %>
      <button class="nav-link" id="tab-building-<%- building.name %>" data-bs-toggle="tab" data-bs-target="#building-<%- building.name %>" type="button" role="tab" onclick="sessionStorage.setItem('home-building', 'tab-building-<%- building.name %>')">
        <%- building.name %>
      </button>
    <% } %>
  </div>
</nav>
<div class="tab-content text-nowrap" id="nav-tabContent">
  <% for (let building of buildings) { %>
    <div class="tab-pane fade" id="building-<%- building.name %>" role="tabpanel">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead><tr>
            <th scope="col" class="align-middle"> 節次 </th>
            <% for (let floor of building.floors) { %>
              <% for (let classroom of floor.classrooms) { %>
                <th scope="col"> <span class="text-secondary"><%- floor.name %></span> <br> <%- classroom.name %> </th>
              <% } %>
            <% } %>
          </tr></thead>
          <tbody>
            <% for (let period of Array(15).keys()) { %>
              <tr>
                <th scope="row" class="align-middle"> <%- period %> </th>
                <% for (let floor of building.floors) { %>
                  <% for (let classroom of floor.classrooms) { %>
                  <td class="align-middle">
                    <div class="d-grid">
                    <% let lesson = classroom.schedule[date.getDay()][period] %>
                    <% if (lesson) { %>
                    <button class="btn btn-primary btn-lg" type="button" data-bs-toggle="modal" data-bs-target="#lessonInfoModal" onclick="showLessonInfo('<%- lesson._id %>');">
                      <%- lesson.name %> - <span class="h6 text-warning"><%- lesson.teacher %></span>
                    </button>
                    <% } else { %>
                      <button class="btn btn-outline-info btn-lg" type="button" data-bs-toggle="modal" data-bs-target="#borrowModal"
                        onclick="setBorrowInfo('<%- classroom._id %>', '<%- date %>', '<%- period %>');">
                        申請借用
                      </button>
                    <% } %>
                    </div>
                  </td>
                  <% } %>
                <% } %>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>
</div>

<!-- Modal -->
<div class="modal fade" id="borrowModal" tabindex="-1" aria-labelledby="borrowModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="borrowModalLabel"> 教室借用 </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="name" class="form-label float-start"> 名稱 </label>
          <input id="borrowName" type="text" class="form-control" value="" required>
        </div>
        <div class="mb-3">
          <label for="borrowTeacher" class="form-label float-start"> 授課教師 </label>
          <input id="borrowTeacher" type="text" class="form-control" value="" required>
        </div>
        <div class="mb-3 row align-items-center">
          <label for="borrowDuring" class="form-label col-3"> 借用 </label>
          <div class="col">
            <input id="borrowDuring" type="number" class="form-control" value="" required>
          </div>
          <label for="borrowDuring" class="form-label col-3"> 節 </label>
        </div>
        <div class="mb-3">
          <label for="borrowReason" class="form-label float-start"> 借用原因 </label>
          <textarea class="form-control" id="borrowReason"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="borrow()" data-bs-dismiss="modal"> 送出申請 </button>
      </div>
    </div>
  </div>
</div>
