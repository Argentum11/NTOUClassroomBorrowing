<ul class="list-group">
  <li class="list-group-item">
    <div class="row align-items-center">
      <h3 class="m-0 text-center col"> 學號 </h3>
      <h3 class="m-0 text-center col"> 姓名 </h3>
      <h3 class="m-0 text-center col"> Email 驗證 </h3>
      <div class="col">
        <h3 class="m-0 text-center"> 動作 </h3>
      </div>
    </div>
  </li>
  <% for(let user of data) { %>
    <li class="list-group-item">
      <div class="row align-items-center">
        <h3 class="m-0 text-center col"> <%- user.id %> </h3>
        <h3 class="m-0 text-center col"> <%- user.name %> </h3>
        <h3 class="m-0 text-center col"> <%- user.verified %> </h3>
        <div class="col justify-content-evenly d-flex flex-row flex-wrap">
          <button class="btn btn-lg btn-outline-primary"> 進行審核 </button>
          <button class="btn btn-lg btn-outline-success"> 直接通過 </button>
        </div>
      </div>
    </li>
  <% } %>
</ul>